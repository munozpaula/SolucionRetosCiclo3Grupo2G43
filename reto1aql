--CREACION DE LA TABLA
CREATE TABLE LIBRARI(
    ID NUMBER NOT NULL,
    TARGET VARCHAR2(20),
    CAPACITY NUMBER,
    CATEGORY_ID NUMBER,
    NAME VARCHAR2(400),
    PRIMARY KEY(ID)
);

--DELETE LIBRARY
BEGIN
    DELETE FROM LIBRARI WHERE ID=:id;
    :status_code:=204;
END;

--PUT LIBRARY
BEGIN
    UPDATE LIBRARI SET TARGET=:target, CAPACITY=:capacity,
    CATEGORY_ID=:category_id, NAME=:name WHERE ID=:id;
    :status_code:=201;
END;


--POST LIBRARY 
BEGIN 
    INSERT INTO LIBRARI(ID,TARGET,CAPACITY,CATEGORY_ID,NAME)
    VALUES(:id, :target, :capacity, :category_id, :name);
    :status_code:=201;
END;


--GET LIBRARY
SELECT*FROM LIBRARI
